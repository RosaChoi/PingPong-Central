<div class="row-signin col-sm-8 col-sm-offset-2">

  <h1 class="page-header">Welcome back to Ping Pong Central</h1>

  <%= form_tag signin_path, html: {class:"form-horizontal"} do |f| %>

    <% if @sign_in_error %>
      <div class="alert alert-danger" role="alert">
        <p><%= @sign_in_error %></p>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-7 col-sm-offset-1">
        <%= email_field_tag :email, nil,  :class => "form-control", :placeholder => "email" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-7 col-sm-offset-1">
        <%= password_field_tag :password, nil, :class=> "form-control", :placeholder => "password" %>
      </div>
    </div>

    <div class="form-group actions">
      <div class="col-sm-7 col-sm-offset-1">
        <%= submit_tag "LOG IN & CONTINUE", :class=> "btn btn-default", id: "signInAcct" %>
      </div>
    </div>
  <% end %>
</div>
